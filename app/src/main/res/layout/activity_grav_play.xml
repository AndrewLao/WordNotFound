<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GravPlay"
    android:background="#adddff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/gravPlayToGravLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/outline_home_24"
            android:backgroundTint="#adddff">
        </ImageButton>
        <ImageButton
            android:id="@+id/gravPlayToRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/outline_home_24"
            android:backgroundTint="#adddff">
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:HH:MM:SS"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="24sp"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gravGame"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="play game here"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"></TextView>

        <HorizontalScrollView
            android:id="@+id/gravWordBankScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gravGame"
            android:background="@color/purple_200"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/test1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="test1"
                    android:textSize="32sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/test2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="test2"
                    android:layout_marginLeft="50dp"
                    android:textSize="32sp"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/test3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="test3"
                    android:layout_marginLeft="50dp"
                    android:textSize="32sp"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/test4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="test4"
                    android:layout_marginLeft="50dp"
                    android:textSize="32sp"
                    android:gravity="center_vertical">
                </TextView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gravWordBankScrollContainer"
            android:text="Score:0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="32sp">

        </TextView>
    </RelativeLayout>
</LinearLayout>

